<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/bg">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintGuide_percent="0.328"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@drawable/shape_rect_white_low"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="@+id/guideline4">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/guideline4">

                <ImageView
                    android:id="@+id/ivAppointYiMiao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    app:layout_constraintEnd_toStartOf="@+id/ivAppointYiMiaoQuery"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@mipmap/manager1" />

                <ImageView
                    android:id="@+id/ivAppointYiMiaoQuery"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="@+id/ivAppointYiMiao"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/ivAppointYiMiao"
                    app:layout_constraintTop_toTopOf="@+id/ivAppointYiMiao"
                    app:srcCompat="@mipmap/manager2" />

                <ImageView
                    android:id="@+id/ivAppoint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    app:layout_constraintStart_toStartOf="@+id/ivAppointYiMiao"
                    app:layout_constraintTop_toBottomOf="@+id/ivAppointYiMiao"
                    app:srcCompat="@mipmap/manager3" />

                <ImageView
                    android:id="@+id/ivAppointQuery"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="@+id/ivAppoint"
                    app:layout_constraintStart_toStartOf="@+id/ivAppointYiMiaoQuery"
                    app:layout_constraintTop_toTopOf="@+id/ivAppoint"
                    app:srcCompat="@mipmap/manager4" />

                <ImageView
                    android:id="@+id/ivBackHome"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:scaleType="fitXY"
                    android:layout_marginTop="30dp"
                    app:layout_constraintEnd_toEndOf="@+id/ivAppointQuery"
                    app:layout_constraintStart_toStartOf="@+id/ivAppoint"
                    app:layout_constraintTop_toBottomOf="@+id/ivAppoint"
                    app:srcCompat="@mipmap/manager5" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="12dp"
                    android:clickable="false"
                    android:text="疫苗预约"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="@+id/ivAppointYiMiao"
                    app:layout_constraintTop_toTopOf="@+id/ivAppointYiMiao" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="12dp"
                    android:clickable="false"
                    android:text="疫苗预约查询"
                    android:textColor="@color/grey_low"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="@+id/ivAppointYiMiaoQuery"
                    app:layout_constraintTop_toTopOf="@+id/ivAppointYiMiaoQuery" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="12dp"
                    android:clickable="false"
                    android:text="核酸预约"
                    android:textColor="@color/grey_low"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="@+id/ivAppoint"
                    app:layout_constraintTop_toTopOf="@+id/ivAppoint" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="12dp"
                    android:clickable="false"
                    android:text="核酸预约查询"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="@+id/ivAppointQuery"
                    app:layout_constraintTop_toTopOf="@+id/ivAppointQuery" />


                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:clickable="false"
                    android:text="返 乡 上 报"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@+id/ivBackHome"
                    app:layout_constraintEnd_toStartOf="@+id/ivAppointQuery"
                    app:layout_constraintStart_toStartOf="@+id/ivBackHome"
                    app:layout_constraintTop_toTopOf="@+id/ivBackHome" />


            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>